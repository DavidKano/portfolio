---
export interface Props {
  id: string
  title: string
  wide?: boolean
  tall?: boolean
}
const { id, title, wide = false, tall = false } = Astro.props
// tamaños por clases (no inline) para respetar CSP
const sizeClasses = [
  wide ? "w-[920px]" : "w-[760px]",
  "max-w-[95vw]",
  tall ? "h-[640px]" : "h-[520px]",
  "max-h-[calc(100dvh-6rem)]"
].join(" ");
---
<section
  id={id}
  data-win
  role="dialog"
  aria-modal="true"
  aria-labelledby={`${id}-title`}
  data-title={title}
  class={`win hidden ${sizeClasses}`}
>
  <div class="win__titlebar">
    <h3 id={`${id}-title`} class="text-sm font-semibold">{title}</h3>
    <button class="window__btn" data-close title="Cerrar">✕</button>
  </div>
  <div class="win__content">
    <slot />
  </div>
</section>


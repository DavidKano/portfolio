---
const subtitle = "Dessarrollador de aplicaciones Multiplataforma";
---
<section class="relative bg-white">
  <div class="mx-auto max-w-6xl px-6 pt-16 pb-12 md:pt-20 md:pb-16">
    <div class="grid md:grid-cols-2 items-center gap-8">
      <!-- Texto -->
      <div class="text-center md:text-left order-2 md:order-1">
        <h1 class="text-6xl font-extrabold tracking-tight text-zinc-900">
          Desarrollador
        </h1>
        <p class="mt-3 text-zinc-600 text-base md:text-lg max-w-sm mx-auto md:mx-0">
          {subtitle}
        </p>
      </div>

      <!-- Imagen -->
      <div class="flex justify-center md:justify-end order-1 md:order-2">
        <img
          src="/hero.png"
          alt="David Cano"
          class="w-[420px] md:w-[500px] rounded-none object-cover"
        />
      </div>
    </div>
  </div>
  <div class="h-px w-full bg-zinc-200"></div>
</section>

---
const pinned = [
{ id: 'proyectos', label: 'Proyectos', icon: 'folder' },
{ id: 'tech', label: 'Tecnologías', icon: 'code' },
{ id: 'certs', label: 'Certs', icon: 'star' },
{ id: 'contacto', label: 'Mail', icon: 'mail' },
];
---
<nav class="taskbar fixed inset-x-0 bottom-0 h-14 px-3 flex items-center z-40">
<div class="hidden md:flex items-center text-sm opacity-90 gap-2">
<span class="inline-block w-2 h-2 rounded-full bg-emerald-400"></span>
<span>Hola, soy <strong>David Cano</strong></span>
</div>
<div class="mx-auto flex items-center gap-2">
<button id="btn-start" class="w-10 h-10 rounded-xl grid place-content-center hover:bg-white/10 focus:outline-none" aria-haspopup="menu" aria-controls="start-menu" title="Inicio">
<svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" class="opacity-90"><path d="M3 4l8-1v9H3V4zm9-1l9-1v11h-9V3zM3 13h8v8l-8-1v-7zm9 0h9v9l-9-1v-8z"/></svg>
</button>
<div class="flex items-center gap-1">
{pinned.map((it) => (
<button data-open={it.id} class="w-10 h-10 rounded-xl grid place-content-center hover:bg-white/10 focus:outline-none" title={it.label}>
<svg viewBox="0 0 24 24" class="w-6 h-6" aria-hidden="true">
{it.icon === 'folder' && <path fill="currentColor" d="M10 4l2 2h8a2 2 0 012 2v9a3 3 0 01-3 3H5a3 3 0 01-3-3V7a3 3 0 013-3h5z"/>}
{it.icon === 'code' && <path fill="currentColor" d="M8 17l-4-5l4-5v10m8 0V7l4 5l-4 5M13 5l-2 14"/>}
{it.icon === 'star' && <path fill="currentColor" d="M12 2l2.4 4.9L20 8l-3.6 3.5L17 18l-5-2.6L7 18l.6-6.5L4 8l5.6-1.1z"/>}
{it.icon === 'mail' && <path fill="currentColor" d="M4 6h16a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2m0 2l8 5l8-5"/>}
</svg>
</button>
))}
</div>
</div>
<div class="ml-auto flex items-center gap-3 text-sm opacity-90 min-w-[140px] justify-end">
  <span id="tray-net" title="Red" class="hidden sm:inline">○</span>
  <span id="tray-bat" title="Batería" class="hidden sm:inline">◐</span>
  <span id="clock" class="clock"></span>
</div>

</nav>
<div id="start-menu" class="startmenu fixed bottom-16 left-1/2 -translate-x-1/2 w-[min(520px,95vw)] rounded-2xl p-3 shadow-2xl hidden z-40">
<div class="flex gap-3">
<div class="w-10 shrink-0 grid place-content-start pt-1 opacity-80">
<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M3 4l8-1v9H3V4zm9-1l9-1v11h-9V3zM3 13h8v8l-8-1v-7zm9 0h9v9l-9-1v-8z"/></svg>
</div>
<div class="grow grid grid-cols-1 sm:grid-cols-2 gap-2">
<button data-open="proyectos" class="p-3 rounded-xl hover:bg-white/10 text-sm text-left flex items-center gap-3">
<span class="w-9 h-9 rounded-lg bg-white/10 grid place-content-center"><svg viewBox="0 0 24 24" class="w-5 h-5"><path fill="currentColor" d="M10 4l2 2h8a2 2 0 012 2v9a3 3 0 01-3 3H5a3 3 0 01-3-3V7a3 3 0 013-3h5z"/></svg></span>
<span>Proyectos</span>
</button>
<button data-open="tech" class="p-3 rounded-xl hover:bg-white/10 text-sm text-left flex items-center gap-3">
<span class="w-9 h-9 rounded-lg bg-white/10 grid place-content-center"><svg viewBox="0 0 24 24" class="w-5 h-5"><path fill="currentColor" d="M8 17l-4-5l4-5v10m8 0V7l4 5l-4 5M13 5l-2 14"/></svg></span>
<span>Tecnologías</span>
</button>
<button data-open="certs" class="p-3 rounded-xl hover:bg-white/10 text-sm text-left flex items-center gap-3">
<span class="w-9 h-9 rounded-lg bg-white/10 grid place-content-center"><svg viewBox="0 0 24 24" class="w-5 h-5"><path fill="currentColor" d="M12 2l2.4 4.9L20 8l-3.6 3.5L17 18l-5-2.6L7 18l.6-6.5L4 8l5.6-1.1z"/></svg></span>
<span>Certificaciones</span>
</button>
<button data-open="contacto" class="p-3 rounded-xl hover:bg-white/10 text-sm text-left flex items-center gap-3">
<span class="w-9 h-9 rounded-lg bg-white/10 grid place-content-center"><svg viewBox="0 0 24 24" class="w-5 h-5"><path fill="currentColor" d="M4 6h16a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2m0 2l8 5l8-5"/></svg></span>
<span>Contacto</span>
</button>
</div>
</div>
</div>
---
const items = [
  {
    title: "Podocita — Reservas de cita",
    tag: "Android Studio App",
    thumb: "/podocita.png",
    href: "https://play.google.com/store/apps/details?id=com.davidcano.podocita2&hl=es",
    ctas: [
      { label: "Google Play", href: "https://play.google.com/store/apps/details?id=com.davidcano.podocita2&hl=es" },
      { label: "Repo", href: "https://github.com/DavidKano/Podocita" },
      
    ],
  },
   {
    title: "Podocita WEB — Reservas de cita",
    tag: "WEB App React",
    thumb: "/podocitaweb.png",
    href: "https://podocita.web.app/",
    ctas: [
      { label: "Repo", href: "https://github.com/DavidKano/podocita-web" },
      { label: "Web", href: "https://podocita.web.app/" },

    ],
  },
  {
    title: "StockMaster — Control de almacén",
    tag: "Desktop App / Unity + C#",
    thumb: "/stockmaster.png",
    href: "https://github.com/DavidKano/StockMaster",
    ctas: [{ label: "Repo", href: "https://github.com/DavidKano/StockMaster" }],
  },
  {
    title: "DP Telemetry — Live GPS",
    tag: "Unity & Maps / Trabajando con CodeArts",
    thumb: "/dptelemetry.png",
    href: "https://play.google.com/store/search?q=Dptelemetry&c=apps&hl=es",
    ctas: [{ label: "GooglePlay", href: "https://play.google.com/store/search?q=Dptelemetry&c=apps&hl=es" }],
  },
  {
    title: "DayToDay",
    tag: "App de hábitos y gamificación. Desarrollada en Unity con sistema de guardado",
    thumb: "/daytoday.png",
    href: "https://github.com/DavidKano/ProyectoGamificacion",
    ctas: [{ label: "Repo", href: "https://github.com/DavidKano/ProyectoGamificacion" }],
  },
];
---
<section class="bg-zinc-50">
  <div class="mx-auto max-w-6xl px-6 py-14">
    <h2 class="text-xs tracking-[0.18em] text-zinc-500 uppercase text-center">Some of my latest work</h2>
    <div class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((it) => (
        <article class="group rounded-xl bg-white shadow-sm ring-1 ring-zinc-200 hover:-translate-y-0.5 transition p-4">
          <a href={it.href} class="block">
            <div class="aspect-[16/9] w-full overflow-hidden rounded-lg bg-zinc-100">
              <img src={it.thumb} alt={it.title} class="h-full w-full object-cover" />
            </div>
            <div class="mt-4">
              <p class="text-sm text-zinc-500">{it.tag}</p>
              <h3 class="font-semibold leading-tight group-hover:underline">{it.title}</h3>
            </div>
          </a>
          {it.ctas && (
            <div class="mt-3 flex flex-wrap gap-3">
              {it.ctas.map(c => (
                <a href={c.href} target="_blank" class="text-xs px-2 py-1 rounded ring-1 ring-zinc-300 hover:bg-zinc-50">
                  {c.label} →
                </a>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</section>

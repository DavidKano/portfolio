import NavBar from "../components/NavBar.astro";
import Certifications from "../components/Certifications.astro";
import SiteFooter from "../components/SiteFooter.astro";
---
<Base title="David Cano — Learn & Certifications">
  <NavBar />
  <main>
    <section class="bg-white">
      <div class="mx-auto max-w-6xl px-6 py-12 md:py-16 text-center">
        <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight">Aprendizaje & Certificaciones</h1>

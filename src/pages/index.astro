---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Projects from '../components/Projects.astro';
import TechStack from '../components/TechStack.astro';
import Contacto from '../components/Contacto.astro';
import Footer from '../components/Footerbis.astro';
import Certificaciones from '../components/Certificaciones.astro';
import VisitCounter from '../components/VisitCounter.astro';



---

<Layout title="David Cano | Desarrollador Full Stack">
<section class="min-h-screen flex-col justify-center items-center text-center bg-gradient-to-br from-gray-900 to-gray-800 text-white flex">
  <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold mb-4">HOLA, soy David Cano</h1>
  
  <p class="text-lg sm:text-xl max-w-xl mb-6 px-4">
    Desarrollador Android y Unity Full Stack. Apasionado por la tecnología, el desarrollo de soluciones reales y la mejora continua.
  </p>

  <div class="flex flex-wrap gap-4 justify-center">
    <a href="mailto:davidkano@hotmail.es" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition">✉️ Email</a>
    <a href="https://github.com/DavidKano" class="bg-gray-800 hover:bg-black text-white px-4 py-2 rounded-lg transition">💻 GitHub</a>
    <a href="https://www.linkedin.com/in/david-cano-jaramillo-6bb1b017b/" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition">💼 LinkedIn</a>
    <a href="/cv-davidcano.pdf" class="bg-white hover:bg-gray-200 text-blue-600 px-4 py-2 rounded-lg transition">🗂️ Descargar CV</a>
  </div>

  <p class="mt-4 text-sm">Disponible para trabajar 🚀</p>

  <!-- Flecha animada para hacer scroll -->
  <div class="flex justify-center mt-10 animate-bounce">
    <a href="#proyectos" aria-label="Ver más">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </a>
  </div>
</section>

  <Certificaciones/>
  <Projects />
  <TechStack />
  <VisitCounter id="davidkano-portfolio-home" label="Visitas" />
  <Contacto />
  <Footer />


</Layout>
